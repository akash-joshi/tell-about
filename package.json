{
  "name": "tell-about",
  "version": "1.1.4",
  "description": "A CLI Tool that help you know about npm pacakges right in the command line.",
  "main": "dist/index.js",
  "bin": {
    "tell-about": "dist/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "test": "nyc mocha src/index.test.js",
    "watch:test": "mocha --watch src/index.test.js",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel lint test build"
  },
  "keywords": [],
  "files": [
    "dist"
  ],
  "author": "Yash Gupta <yashguptaofficial@gmail.com> (https://yashguptaz.com/)",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "chalk": "4.0.0",
    "enquirer": "2.3.5",
    "node-fetch": "2.6.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "3.6.5",
    "eslint": "6.8.0",
    "ghooks": "2.0.4",
    "mocha": "7.1.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
